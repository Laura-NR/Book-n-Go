{% extends "base_template.html.twig" %}

{% block title %}{{ website.title }} - Posts{% endblock %}

{% block content %}
    <div class="container">
        <h2 class="text-center my-4">Posts</h2> {# Clear title #}

        {% if session.role == "voyageur" and session.user_id == idVoyageurCarnet %}
            <div class="d-flex justify-content-center mb-4"> {# Centered button #}
                <a href="index.php?controleur=post&methode=creer&id_carnet={{ idCarnet }}" class="btn btn-primary" title="Créer un nouveau post">
                    <i data-feather="plus-circle" class="me-2"></i> Créer un post
                </a>
            </div>
        {% endif %}

        {% if posts is empty %} {# Display message when no posts exist #}
            <p class="text-center">Aucun post disponible pour le moment.</p>
        {% else %}
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4"> {# Responsive grid #}
                {% for post in posts %}
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img src="{{ post.chemin_img }}" class="card-img-top" alt="Image du post {{ post.titre }}" style="object-fit: cover; height: 200px;" loading="lazy"> {# Lazy loading #}
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{ post.titre }}</h5>
                                <p class="card-text"><small class="text-muted">{{ post.date_publication }}</small></p> {# Smaller date #}
                                <a href="?controleur=post&methode=afficher&id={{ post.id }}" class="btn btn-primary mt-auto">
                                    <i data-feather="eye" class="me-2"></i> Consulter
                                </a> {# Button at the bottom #}

                                {% if session.role == "voyageur" and session.user_id == idVoyageurCarnet %}
                                    <form method="post" action="index.php?controleur=post&methode=supprimer" class="mt-3" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce post ?')"> {# Confirmation message #}
                                        <input type="hidden" name="id_post" value="{{ post.id }}">
                                        <input type="hidden" name="id_carnet" value="{{ idCarnet }}">
                                        <button type="submit" class="btn btn-danger">
                                            <i data-feather="trash-2" class="me-2"></i> Supprimer {# Icon in button #}
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}


{% block script %}
    <script>
        feather.replace();
    </script>
{% endblock %}