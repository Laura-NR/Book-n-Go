{% extends "base_template.html.twig" %}
{% block title %}{{constant('WEBSITE_TITLE')}} Page d'accueil{% endblock %}

{#block navbar items#}

{% block content %}
    {{ dump(idVoyageurCarnet) }}

    <div class="container text-center">
    {% if session.role == "voyageur" and session.user_id == idVoyageurCarnet %}
    <a class="btn btn-primary mb-4" href="index.php?controleur=post&methode=creer&id_carnet={{ idCarnet }}">Cr√©er un nouveau post</a>
    {% endif %}

    <div class="row row-cols-4 align-items-center">
            {% for post in posts %}
                <div class="card col mb-3 mx-1">
                    <img src="./{{ post.chemin_img }}" class="card-img-top" alt="Image du post {{ post.titre }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ post.titre }}</h5>
                        <p class="card-text">{{ post.date_publication }}</p>
                        <a href="?controleur=post&methode=afficher&id={{ post.id }}" class="btn btn-primary">Consulter</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% endblock %}