
{% extends "base_template.html.twig" %}
{% block title %}{{ constant('WEBSITE_TITLE') }} - Mon compte{% endblock %}
{% block content %}
<div class="container my-5">
    <h2>Mes informations:</h2>
    {# {{dump(voyageur)}} #}
    {# //bloc avec les informations de l'utilisateur connecté #}
    <div class="card">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <p><strong>Nom:</strong> <span id="nom-utilisateur">{{ voyageur.nom }}</span></p>
                <p><strong>Prénom:</strong> <span id="prenom-utilisateur">{{ voyageur.prenom }}</span></p>
                <p><strong>Mail:</strong> <span id="email-utilisateur">{{ voyageur.mail }}</span></p>
                <p><strong>Numéro de téléphone:</strong> <span id="telephone-utilisateur">{{ voyageur.numero_tel }}</span></p>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-3"> {# //centrer au centre de ma carte des informations #}
    {# renvoi sur les pages de modification ou afficher un pop up de confirmation de suppression de compte #}
        <button class="btn btn-outline-secondary mr-2" onclick="modifierVoyageur()">Modifier les informations</button>
         <button type="button" data-bs-toggle="modal" data-bs-target="#fenetreModale" class="btn btn-danger">Supprimer mon compte</button>{#//mettre en rouge plutot car c'est un danger #}
    </div>
</div>
<div class="modal fade" id="fenetreModale" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form action="index.php?controleur=voyageur&methode=supprimerVoyageur&id={{ voyageur.getId }}" method="POST">
                <div class="modal-body">
                    <div class="container mt-2">
                        <div class="justify-content-center">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Supprimer mon compte</h1>
                            <p class="fs-5">Voulez vous confirmer la suppression? Cela entrainera la suppression de vos carnets de voyages, vos posts, commentaires...</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger" name="update_article">Supprimer</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{ dump(voyageur.d) }}
{% endblock %}