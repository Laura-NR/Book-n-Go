{% extends "base_template.html.twig" %}

{% block title %}{{ parent() }} - Page d'accueil{% endblock %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="./css/page_accueil.css">
{% endblock %}

{% block content %}
<main>
    {% if app.messages_alertes is not empty %}
		{% for message in app.messages_alertes %}
			<div class="alert alert-{{ message.type }} text-center alert-dismissible fade show" role="alert">
				<p>{{ message.message }}</p>
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{% endfor %}
	{% endif %}

    {# image de paysage d'arrivé sur le site A COMPLETER #}
    <div class="text-center">
        <div id="carouselAccueil" class="carousel slide mb-5" data-bs-ride="carousel" data-interval="2000">
