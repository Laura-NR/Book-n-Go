                <div class="rounded-pill px-5 py-4 bg-body-tertiary">
                    <h1 id="carouselTitre" class="text-white">Découvrir n'a jamais été aussi facile</h1>
                    <button id="carouselBouton" class="btn btn-primary rounded-pill">Réserver maintenant</button>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselAccueil" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselAccueil" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>

            <button id="scrollDownButton" class="btn btn-link position-absolute bottom-0 start-50 translate-middle-x mb-3">
                <i id="scrollDownIcon" data-feather="arrow-down-circle" color="#803D5C" width="128" height="128" stroke-width="1" class="feather-icon"></i>
