{% extends "base_template.html.twig" %} {% block title %} Création d'une
Excursion {% endblock %} {% block content %}
<main class="container">
  <h1 class="mt-30 mb-20">Informations de l'excursion :</h1>
  <form>
    <div style="background-color: #b2708f; color: #000; border-radius: 30px">
    <div class="row">
      <div class="col">
        <label for="nom" class="form-label">Titre :</label>
        <input type="text" id="nom" name="nom" class="form-control" />
      </div>
      <div class="col">
        <label for="capacite" class="form-label">Capacite :</label>
        <input
          type="number"
          id="capacite"
          name="capacite"
          class="form-control"
        />
      </div>
    </div>
    <div class="row">
      <div class="col">
        <label for="itineraire" class="form-label">Itineraire :</label>
        <select name="itineraire" id="itineraire" class="form-select"></select>
      </div>
      <div class="col">
        <label for="image" class="form-label">Image :</label>
        <input type="file" id="image" name="image" class="form-control" />
      </div>
    </div>
    <div class="row">
      <label for="description" class="form-label">Description :</label>
      <textarea
        name="description"
        id="description"
        class="form-control"
      ></textarea>
    </div>
    <div class="row">
      <input
        type="checkbox"
        name="public"
        id="public"
        class="form-check-input"
      />
      <label for="public" class="form-check-label"
        >Je veux que d’autres guides puissent participer dans cette
        excursion</label
      >
    </div>
    </div>

    <input type="submit" value="Créer" class="btn" style="background-color: #b2708f; color: #fff; border-radius: 30px" />
  </form>
</main>
{% endblock %}
