{% extends "base_template.html.twig" %}

{% block title %}
Connexion
{% endblock %}

{% block content %}
<main class="container mt-5">
    <h1 class="text-center mb-4">Connexion</h1>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card p-4 shadow-sm">
                <form action="?controller=utilisateur&methode=connexion" method="POST">
                    <!-- Email -->
                    <div class="mb-3">
                        <label for="username" class="form-label">Email :</label>
                        <input type="email" name="username" id="username" class="form-control" placeholder="Entrez votre email" required>
                    </div>
                    <!-- Mot de passe -->
                    <div class="mb-3">
                        <label for="mdp" class="form-label">Mot de passe :</label>
                        <input type="password" name="mdp" id="mdp" class="form-control" placeholder="Entrez votre mot de passe" required>
                    </div>
                    <!-- Bouton de connexion -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Se connecter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
{% endblock %}
