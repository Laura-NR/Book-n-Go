{% extends "base_template.html.twig" %}

{% block title %}
Connexion
{% endblock %}

{% block content %}
<main class="container mt-5">
    <h1 class="text-center mb-4">Connexion</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            {% if erreurs|default %}
                {% for erreur in erreurs %}
                    <div class="alert alert-danger" role="alert">
                        {{ erreur }}
                    </div>
                {% endfor %}
            {% endif %}
            <div class="card p-4 shadow-sm">
                <form action="index.php?controleur=utilisateur&methode=connexion" method="POST">
                    <!-- Email -->
                    <div class="mb-3">
                        <label for="mail" class="form-label">Email :</label>
                        <input type="email" name="mail" id="mail" class="form-control" value="{{ donnees['mail'] }}" placeholder="Entrez votre email" required>
                    </div>

                    <!-- Mot de passe -->
                    <div class="mb-3">
                        <label for="mdp" class="form-label">Mot de passe :</label>
                        <input type="password" name="mdp" id="mdp" minlength="16" maxlength="32" class="form-control" value="{{ donnees['mdp'] }}" placeholder="Entrez votre mot de passe" required>
                    </div>

                    <!-- Bouton de connexion -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Se connecter</button>
                    </div>
                </form>

                <!-- Lien vers l'inscription -->
                <div class="text-center mt-3">
                    <p>Pas encore inscrit ? <a href="index.php?controleur=utilisateur&methode=afficherInscription" class="btn btn-link">S'inscrire</a></p>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}
