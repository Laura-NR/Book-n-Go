{% extends "base_template.html.twig" %}

{% block title %}
Connexion
{% endblock %}

{% block content %}
<main class="container mt-5">
    <h1 class="text-center mb-4">Connexion</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow-sm">
                <form action="connexion.php" method="POST">
                    <div class="mb-3">
                        <label for="username" class="form-label">Nom d'utilisateur :</label>
                        <input type="text" name="username" id="username" class="form-control" placeholder="Veuillez entrer votre identifiant" required>
                    </div>
                    <div class="mb-3">
                        <label for="mdp" class="form-label">Mot de passe :</label>
                        <input type="password" name="mdp" id="mdp" class="form-control" placeholder="Veuillez entrer votre mot de passe" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Se connecter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
{% endblock %}
