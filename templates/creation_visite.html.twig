{% extends "base_template.html.twig" %}

{% block title %} 
Création d'une Visite 
{% endblock %} 
{% block content %}
<main class="container">
  <h1 style="margin-top: 50px; margin-bottom: 40px" class="text-center">
    Informations de la visite :
  </h1>
  <form class="mx-auto p-5" style="width: 80%" method="post">
    <div
      style="
        background-color: #b2708f;
        color: #000;
        border-radius: 30px;
        padding: 40px;
      "
    >
      <div class="row mb-4">
        <div class="col">
          <label for="nom" class="form-label">Titre :</label>
          <input type="text" id="titre" name="titre" class="form-control" />
        </div>
        <div class="col">
          <label for="capacite" class="form-label">Adresse :</label>
          <input
            type="text"
            id="adresse"
            name="adresse"
            class="form-control"
          />
        </div>
      </div>
      <div class="row mb-4">
        <div class="col">
          <label for="itineraire" class="form-label">Ville :</label>
          <div class="input-group">
            <input type="text" name="ville" id="ville" class="form-control">
          </div>
        </div>
        <div class="col">
            <label for="chemin_image" class="form-label">Code postal :</label>
            <input
              type="number"
              id="code_postal"
              name="code_postal"
              class="form-control"
            />
          </div>
      </div>
      <div class="row mb-4">
        <div class="col">
          <label for="description" class="form-label">Description :</label>
          <textarea
            name="description"
            id="description"
            class="form-control"
            rows="5"
          ></textarea>
        </div>
      </div>
      </div>
    </div>

    <div class="text-center mt-4">
      <input
        type="submit"
        value="Créer"
        class="btn"
        style="
          background-color: #b2708f;
          color: #fff;
          border-radius: 30px;
          padding: 10px 40px;
        "
        formaction="index.php?controleur=visite&methode=creer"
      />
    </div>
  </form>
</main>
{% endblock %}