        {% if session.role == "voyageur" %}
            <div class="text-center mb-4">
                <a href="index.php?controleur=carnetVoyage&methode=creer" class="btn btn-primary" title="Créer un carnet de voyage">
                    Créer un carnet de voyage
                </a>
                <a href="index.php?controleur=carnetVoyage&methode=lister" class="btn btn-primary" title="Créer un carnet de voyage">
                    Voir tous les carnets publics
                </a>
            </div>
        {% endif %}

        <!-- Grille des carnets -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for carnet in carnets %}
                <div class="col">
                    <div class="card h-100 shadow-sm border-primary rounded rounded-3">
                        <img src="{{ carnet.chemin_img }}" class="card-img-top" style="object-fit: cover; height: 200px;" loading="lazy" alt="Image du carnet {{ carnet.titre }}">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ carnet.titre }}</h5>
                            <p class="card-text">{{ carnet.description }}</p>
                            <a href="?controleur=post&methode=listerParCarnet&id={{ carnet.id }}" class="btn btn-primary d-block mt-3">
                                <i data-feather="eye" class="me-2"></i> Consulter / Modifier
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col">
                    <p class="text-center">Aucun carnet de voyage disponible.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}