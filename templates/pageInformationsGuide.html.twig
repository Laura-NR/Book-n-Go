{% extends "base_template.html.twig" %}

{% block title %}
    {{ constant('WEBSITE_TITLE') }} - Mon compte
{% endblock %}

{% block content %}
<div class="container my-5">
    <h2>Mes informations:</h2>
    <a href="index.php?controleur=excursion&methode=afficherCreer" class="btn btn-success">Créer une nouvelle excursion</a>
    <!-- Formulaire principal pour Modifier et Enregistrer -->
    <form method="POST" action="index.php?controleur=guide&methode=modifierGuide&id={{ guide.id }}" id="form-modification">

        <div class="card">
            <div class="card-body">

                <!-- Nom -->
                <div class="mb-3">
                    <label for="nom-utilisateur" class="form-label"><strong>Nom:</strong></label>
                    {% if editMode %}
                        <input type="text" name="nom" id="nom-utilisateur" value="{{ guide.nom }}" class="form-control">
                    {% else %}
                        <p>{{ guide.nom }}</p>
                    {% endif %}
                </div>

                <!-- Prénom -->
                <div class="mb-3">
                    <label for="prenom-utilisateur" class="form-label"><strong>Prénom:</strong></label>
                    {% if editMode %}
                        <input type="text" name="prenom" id="prenom-utilisateur" value="{{ guide.prenom }}" class="form-control">
                    {% else %}
                        <p>{{ guide.prenom }}</p>
                    {% endif %}
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label for="email-utilisateur" class="form-label"><strong>Mail:</strong></label>
                    {% if editMode %}
                        <input type="email" name="mail" id="email-utilisateur" value="{{ guide.mail }}" class="form-control">
                    {% else %}
                        <p>{{ guide.mail }}</p>
                    {% endif %}
                </div>

                <!-- Numéro de téléphone -->
                <div class="mb-3">
                    <label for="telephone-utilisateur" class="form-label"><strong>Numéro de téléphone:</strong></label>
                    {% if editMode %}
                        <input type="text" name="numero_tel" id="telephone-utilisateur" value="{{ guide.numero_tel }}" class="form-control">
                    {% else %}
                        <p>{{ guide.numero_tel }}</p>
                    {% endif %}
                </div>

                <!-- Certification -->
                {% if not editMode %}
                    <div class="mb-3">
                        <label class="form-label"><strong>Certification:</strong></label>
                        <a href="{{ guide.chemin_certif }}" target="_blank" class="link-primary">Voir ma certification</a>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Boutons Modifier / Enregistrer / Annuler -->
        <div class="mt-4 d-flex justify-content-between">
            {% if editMode %}
                <div class="d-flex">
                    <!-- Bouton Enregistrer déclenche la modale -->
                    <button type="submit" class="btn btn-success" name="action" value="modifier">Enregistrer</button>
                    <!-- Annuler : Redirection vers la page d'informations du guide -->
                    <a href="?controleur=guide&methode=afficher&id={{ guide.id }}" class="btn btn-outline-secondary ms-2">Annuler</a>
                </div>
            {% else %}
                <a href="?controleur=guide&methode=afficher&id={{ guide.id }}&editMode=true" class="btn btn-outline-secondary">Modifier</a>
            {% endif %}

            <!-- Supprimer toujours à droite -->
            <div class="ms-auto">
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#fenetreModale"> Supprimer mon compte</button>
            </div>
        </div>
    </form>
